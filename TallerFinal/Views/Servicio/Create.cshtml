@model TallerFinal.Models.Servicio

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Operador.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-6">
            <div class="form-horizontal">
                <h4>Servicio</h4>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Tarifa, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Tarifa)
                        @Html.ValidationMessageFor(model => model.Tarifa)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Fecha)
                        @Html.ValidationMessageFor(model => model.Fecha)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DireccionOrigen,"Origen", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DireccionOrigen)
                        @Html.ValidationMessageFor(model => model.DireccionOrigen)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DireccionDestino, "Destino",new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DireccionDestino)
                        @Html.ValidationMessageFor(model => model.DireccionDestino)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ClienteId, "ClienteId", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ClienteId", String.Empty)
                        @Html.ValidationMessageFor(model => model.ClienteId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Operador, "Operador", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Operador", String.Empty)
                        @Html.ValidationMessageFor(model => model.Operador)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Conductor, "Conductor", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Conductor", String.Empty)
                        @Html.ValidationMessageFor(model => model.Conductor)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <img src="~/Images/tarifas.jpg" alt="Alternate Text" width="500" height="500"/>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
