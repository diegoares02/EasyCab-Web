<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDFuqmeJqhKY_5n6dLhMc1JfLgYpCRNA90&signed_in=true&callback=initMap"
            async defer>
    </script>
</head>
<body>
    @if (Session["tipo"].ToString().Equals("Operador"))
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Servicio")" class="navbar-brand"><span class="glyphicon glyphicon-home"></span> EasyCab</a> 
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Ubicacion")"><span class="glyphicon glyphicon-map-marker"></span> Ubicacion</a></li>
                    <li><a href="@Url.Action("Index","Servicio")"><span class="glyphicon glyphicon-dashboard"></span> Servicio</a></li>
                    <li><a href="@Url.Action("Index","Cliente")"><span class="glyphicon glyphicon-user"></span> Cliente</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Logout","Login")"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>
    }   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
